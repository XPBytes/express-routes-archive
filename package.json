{
  "name": "@xpbytes/express-routes-archive",
  "version": "2.0.0",
  "description": "Utility class to register routes and dynamically generate their URL or path from anywhere in the express app",
  "module": "dist/RoutesArchive.js",
  "repository": "https://github.com/XPBytes/express-routes-archive",
  "author": "Derk-Jan Karrenbeld <derk-jan@xpbytes.com>",
  "license": "MIT",
  "files": [
    "README.md",
    "LICENSE",
    "/dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prebuild:test": "rimraf tests/dist",
    "build:test": "tsc --project tests/tsconfig.json",
    "lint": "tslint --project tsconfig.json",
    "pretest": "yarn build:test",
    "test": "tape -r esm tests/dist/**/*.test.js",
    "prepublish": "yarn build && yarn lint && yarn test"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@types/tape": "^4.2.33",
    "esm": "^3.1.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "tape": "^4.9.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,css,md}": [
        "prettier --single-quote --no-semi --arrow-parens always --write",
        "git add"
      ],
      "*{src,app,__{tests,mocks}__,test,tests}/**/*.{mjs,js,jsx,ts,tsx}": [
        "prettier --single-quote --no-semi --arrow-parens always --write",
        "git add"
      ]
    }
  }
}
